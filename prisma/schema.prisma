generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model BlogSite {
  id                    String    @id @default(auto()) @map("_id") @db.ObjectId
  url                   String    @unique
  name                  String?
  feedUrl               String?
  latestBlogDescription String?
  latestBlogTitle       String?
  latestBlogUrl         String?
  latestBlogDate        DateTime?

  users  User[]   @relation(fields: [userId], references: [id])
  userId String[] @db.ObjectId
}

model User {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  name  String?

  blogSites  BlogSite[] @relation(fields: [blogSiteId], references: [id])
  blogSiteId String[]   @db.ObjectId
}
